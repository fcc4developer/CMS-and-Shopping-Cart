<% include _layouts/header %>

<div class="container">
  <div class="row">
    <h1 class="page-header">Sales Products</h1>
    <br><br>
  </div>
  <div class="row top-row products p">
    <%if (products.length > 0) { %>
      <% products.forEach(function(p) { %>

      <div class="col-xs-12 product">
        <div class="product-pimage">
          <a href="/products/<%= p.category %>/<%= p.slug %>" class="pa">
            <img class="pimage" src="/product-images/<%= p.id %>/<%= p.image %>"
              alt=""></a></div>
        <h6>
          <%= p.title %>
        </h6>
        <p class="text-right">Price: $
          <%= parseFloat(p.price).toFixed(2) %>
        </p>
        <a href="/products/<%= p.category %>/<%= p.slug%>" class="vd">View Details &raquo;</a>
      </div>
      <% }); %>

      <% } else { %>
        <h3 class="text-center">Sorry, nothing od sale right now ...</h3>
      <% } %>
  </div>
</div>

<% include _layouts/footer %>
