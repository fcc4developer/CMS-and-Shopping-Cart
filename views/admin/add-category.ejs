<%- include('../_layouts/admin-header.ejs') %>

<h2 class="page-title">Add a category</h2>
<a href="/admin/categories" class="btn btn-primary">Back to all categories</a>
<br><br>

<form action="/admin/categories/add-category" method="post" enctype="multipart/form-data">

  <div class="form-group">
    <label for="">Title</label>
    <input type="text" class="form-control" name="title" value="<%=title %>" placeholder="Title">
  </div>

  <div class="form-group">
    <label for="">Image</label>
    <input type="file" class="form-control" name="image" id="c-img">
    <img src="#" id="c-imgPreview" alt="">
  </div>

  <button class="btn btn-default">Submit</button>
</form>

<script>

  function readURL(input) {

    if (input.files && input.files[0]) {
      var reader = new FileReader();

      reader.onload = function (event) {
        var dataURL = event.target.result;
        $('#c-imgPreview').attr('src', event.target.result).width(100).height(100);
      }

      reader.readAsDataURL(input.files[0]);
    }
  }

  $('#c-img').change(function () {
    readURL(this);
  });

</script>

